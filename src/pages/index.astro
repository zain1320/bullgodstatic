                            const lockValue = document.getElementById('lockValue');
                            animateValue(lockValue, 0, 9, 1200, '%');
                        }, 600);
                        
                        setTimeout(() => {
                            const mktValue = document.getElementById('mktValue');
                            animateValue(mktValue, 0, 3, 800, '%');
                        }, 900);
                        
                        setTimeout(() => {
                            const teamValue = document.getElementById('teamValue');
                            animateValue(teamValue, 0, 1, 600, '%');
                        }, 1200);
                    }
                });
            }, { threshold: 0.3 });
            
            if (tokenomicsSection) {
                observer.observe(tokenomicsSection);
            }
        }

        // Initialize on page load
        window.addEventListener('load', () => {
            initTokenomicsAnimation();
        });
    </script>
